@page
@model redestro.Pages.Stagiaires.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <h4>Stagiaire</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stagiaire.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stagiaire.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stagiaire.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stagiaire.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stagiaire.email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stagiaire.email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stagiaire.telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stagiaire.telephone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stagiaire.DateInscription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stagiaire.DateInscription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stagiaire.Inscriptions)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Libelle des taches</th>
                    <th>Priorite</th>
                </tr>
                @foreach (var item in Model.Stagiaire.Inscriptions)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tache.Libelle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tache.Priorite)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Stagiaire?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
